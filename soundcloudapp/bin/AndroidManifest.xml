            android:name="com.yahoo.android.soundcloudapp.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yahoo.android.soundcloudapp.ListActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name="com.yahoo.android.soundcloudapp.PlayActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_play" >
        </activity>
        <activity
            android:name="com.yahoo.android.soundcloudapp.RecordActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_record" >
        </activity>
        </application>

</manifest>
